server {
    listen 80;
    listen [::]:80;
    server_name _;

    location '/.well-known/acme-challenge' {
        default_type "text/plain";
        root {{ letsencrypt_webroot }};
    }

    location /status/ {
        # return a 200 to Google Load Balancer's health checks
        return 200 'ok';
    }

{% if letsencrypt_https_redirect %}
    location / {
        # Redirect to https
        return 301 https://$host$request_uri;
    }
{% endif %}
}
